{
  "devDependencies": {
    "lint-staged": "^13.0.0"
  },
  "lint-staged": {
    <% if (prettier && eslint) { %>
    "*.{json,json5}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{js,cjs,mjs,jsx,ts,tsx,mts,cts,vue,html,md,yaml,yml}": [
      "eslint --fix",
      "prettier --write"
    ]<% } else if (prettier) { %>
    "*.{js,cjs,mjs,jsx,ts,tsx,mts,cts,vue,html,css,scss,less,md,yaml,yml,json,json5}": [
      "prettier --write"
    ]
    <% } else if (eslint) { %>
    "*": [
      "eslint --fix"
    ]
    <% } %>
  }
}
